<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.comidata.Controladores.ReporteController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
                <Label text="Generar Reporte de Ventas">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <TitledPane collapsible="false" text="Filtros de Reporte">
                    <content>
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>

                            <Label text="Fecha Inicio:" GridPane.rowIndex="0" />
                            <DatePicker fx:id="txtFechaI" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Fecha Fin:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <DatePicker fx:id="txtFechaF" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#generarReporte" style="-fx-background-color: #133558; -fx-text-fill: white;" text="Generar Reporte" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                        </GridPane>
                    </content>
                </TitledPane>

                <AnchorPane VBox.vgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tableReporte" prefHeight="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="colReporteIdPedido" text="ID Pedido" prefWidth="75.0" />
                                <TableColumn fx:id="colReporteFecha" text="Fecha" prefWidth="120.0" />
                                <TableColumn fx:id="colReporteCliente" text="Cliente" prefWidth="150.0" />
                                <TableColumn fx:id="colReporteTotal" text="Monto Total (S/)" prefWidth="120.0" />
                                <TableColumn fx:id="colReporteEstado" text="Estado" prefWidth="100.0" />
                                <TableColumn fx:id="colReporteAcciones" text="Ver Detalle" prefWidth="100.0" />
                            </columns>
                        </TableView>
                        <StackPane fx:id="paneRepo" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>