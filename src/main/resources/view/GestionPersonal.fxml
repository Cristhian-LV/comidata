<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.comidata.Controladores.GestionPersonalController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="GestiÃ³n de Personal">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Filtrar:" />
                        <TextField fx:id="txtFiltroPersonal" prefWidth="200.0" promptText="Buscar por DNI, nombre, estado..." />
                    </children>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </HBox>

                <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="15.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #ffffff; -fx-background-radius: 5;">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Detalles del Personal (PersonalDB)">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <GridPane hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="DNI:" GridPane.rowIndex="0" />
                                        <TextField fx:id="txtDniPersonal" promptText="DNI" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label text="Nombres:" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtNombresPersonal" promptText="Nombres completos" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label text="Apellidos:" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtApellidosPersonal" promptText="Apellidos completos" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label text="Estado:" GridPane.rowIndex="3" />
                                        <ComboBox fx:id="cbxEstadoPersonal" prefWidth="200.0" promptText="Activo / Inactivo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                        <Label text="Usuario Relacionado:" GridPane.rowIndex="4" />
                                        <ComboBox fx:id="cbxUsuario" prefWidth="200.0" promptText="Seleccionar UsuarioDB (Rol: Repartidor/Admin)" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                    </children>
                                </GridPane>

                                <VBox alignment="TOP_RIGHT" prefHeight="75.0" prefWidth="249.0">
                                    <children>
                                        <Button fx:id="btnGuardarPersonal" mnemonicParsing="false" onAction="#guardarPersonal" prefHeight="30.0" prefWidth="196.0" style="-fx-background-color: #133558; -fx-text-fill: white;" text="Guardar" />
                                        <Button fx:id="btnCancelarPersonal" mnemonicParsing="false" onAction="#cancelarEdicionPersonal" prefHeight="31.0" prefWidth="119.0" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Cancelar">
                                            <VBox.margin>
                                                <Insets top="15.0" />
                                            </VBox.margin>
                                        </Button>
                                    </children>
                                </VBox>

                                <Label fx:id="lblMensajePersonal" wrapText="true" />
                            </children>
                        </VBox>
                        <TableView fx:id="tableViewPersonal" HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdPersonal" text="ID" prefWidth="50" />
                                <TableColumn fx:id="colDni" text="DNI" prefWidth="100" />
                                <TableColumn fx:id="colNombreCompleto" text="Nombre Completo" prefWidth="200" />
                                <TableColumn fx:id="colUsuarioRelacionado" text="Usuario" prefWidth="150" />
                                <TableColumn fx:id="colEstado" text="Estado" prefWidth="80" />
                                <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150" />
                            </columns>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>