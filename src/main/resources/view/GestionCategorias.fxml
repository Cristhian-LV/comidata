<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.comidata.Controladores.GestionCategoriasController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Gestión de Categorías">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="15.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #ffffff; -fx-background-radius: 5;" prefWidth="350.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Detalle de Categoría">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <GridPane hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Nombre:" GridPane.rowIndex="0" />
                                        <TextField fx:id="txtNombreCategoria" promptText="Nombre de la categoría" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label text="Descripción:" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtDescripcionCategoria" promptText="Breve descripción" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>

                                <VBox alignment="TOP_RIGHT" prefHeight="75.0" prefWidth="249.0">
                                    <children>
                                        <Button fx:id="btnGuardarCategoria" mnemonicParsing="false" onAction="#guardarCategoria" prefHeight="30.0" prefWidth="196.0" style="-fx-background-color: #133558; -fx-text-fill: white;" text="Guardar" />
                                        <Button fx:id="btnCancelarCategoria" mnemonicParsing="false" onAction="#cancelarEdicionCategoria" prefHeight="31.0" prefWidth="119.0" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Cancelar">
                                            <VBox.margin>
                                                <Insets top="15.0" />
                                            </VBox.margin>
                                        </Button>
                                    </children>
                                </VBox>

                                <Label fx:id="lblMensajeCategoria" wrapText="true" />
                            </children>
                        </VBox>

                        <TableView fx:id="tableViewCategorias" HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdCategoria" text="ID" prefWidth="50" />
                                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" />
                                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="200" />
                                <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="100" />
                            </columns>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>