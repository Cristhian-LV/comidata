<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="621.0" prefWidth="480.0" spacing="20.0" style="-fx-background-color: #133558;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.conceptos_poo.saborsistemas.Controladores.Registrer_Cliente">

    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <Label text="Registrar cliente" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" prefHeight="193.0" prefWidth="380.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Nombre:" textFill="WHITE" GridPane.rowIndex="0" />
        <TextField fx:id="usernameField" promptText="Nombre de usuario" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Contraseña:" textFill="WHITE" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Confirmar Contraseña:" textFill="WHITE" GridPane.rowIndex="2" />
        <PasswordField fx:id="confirmPasswordField" promptText="Vuelva a ingresar la contraseña" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>
   <AnchorPane prefHeight="353.0" prefWidth="380.0">
      <children>
      
          <Button fx:id="registerButton" layoutX="65.0" layoutY="14.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="250.0" style="-fx-font-size: 16px; -fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrarse" />
      
          <Button fx:id="backButton" layoutX="115.0" layoutY="278.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" style="-fx-font-size: 14px; -fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5;" text="Volver al Inicio" />
          <Button fx:id="goToLoginButton" layoutX="65.0" layoutY="142.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="250.0" style="-fx-font-size: 16px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;" text="Iniciar Sesión" visible="false" />
      
          <Label fx:id="messageLabel" alignment="CENTER" layoutX="175.0" layoutY="79.0" maxWidth="350.0" prefHeight="20.0" prefWidth="31.0" textFill="#ffc107" wrapText="true">
              <font>
                  <Font size="14.0" />
              </font>
          </Label>
      </children>
   </AnchorPane>

</VBox>
