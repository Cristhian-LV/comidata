<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15.0"
      fx:controller="pe.edu.upeu.conceptos_poo.saborsistemas.Controladores.Ga_ProductoNew">
    <padding>
        <Insets bottom="20.0"
                left="20.0"
                right="20.0"
                top="20.0"/>
    </padding>

    <children>
        <Label fx:id="lblTituloFormulario" text="Nuevo Producto">
            <font>
                <Font name="System Bold"
                      size="18.0"/>
            </font>
        </Label>
        <GridPane hgap="10.0"
                  vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"
                                   minWidth="10.0"
                                   prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES"
                                   minWidth="10.0"
                                   prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0"
                                prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0"
                                prefHeight="90.0"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Nombre:"
                       GridPane.rowIndex="0"/>
                <TextField fx:id="txtNombreProducto"
                           promptText="Ej. Hamburguesa"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>

                <Label text="Precio Unitario:"
                       GridPane.rowIndex="1"/>
                <TextField fx:id="txtPrecioUnitario"
                           promptText="Ej: 8.90"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>

                <Label text="Stock:"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="txtStockProducto"
                           promptText="Ej: 52"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>

                <Label text="Categoría:"
                       GridPane.rowIndex="3"/>
                <ComboBox fx:id="cbxCategoriaProducto"
                          prefWidth="200.0"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="3"/>

                <Label prefHeight="Infinity"
                       text="Descripción:"
                       GridPane.rowIndex="4"/>
                <TextArea fx:id="txtDescripcionProducto"
                          prefHeight="Infinity"
                          wrapText="true"
                          promptText="Ej: Carne de res madurada, queso cheddar añejo, cebolla caramelizada, pan brioche."
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="4"/>
            </children>
        </GridPane>

        <Label fx:id="lblMensajeProducto"
               wrapText="true"/>

        <HBox alignment="BOTTOM_CENTER"
              prefHeight="140.0"
              prefWidth="310.0"
              spacing="10.0">
            <children>
                <Button fx:id="btnGuardarProducto"
                        onAction="#guardarProducto"
                        mnemonicParsing="false"
                        prefHeight="29.0"
                        prefWidth="150.0"
                        style="-fx-font-size: 16px; -fx-background-color: #028000; -fx-text-fill: white; -fx-background-radius: 7;"
                        text="Guardar"/>
                <Button fx:id="btnCancelarProducto"
                        onAction="#cancelarFormulario"
                        mnemonicParsing="false"
                        prefHeight="28.0"
                        prefWidth="150.0"
                        style="-fx-font-size: 16px; -fx-background-color: #800E00; -fx-text-fill: white; -fx-background-radius: 7;"
                        text="Cancelar">
                    <VBox.margin>
                        <Insets top="15.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </HBox>
    </children>

</VBox>