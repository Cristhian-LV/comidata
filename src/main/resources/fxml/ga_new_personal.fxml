<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15.0"
      fx:controller="pe.edu.upeu.comidata.controllers.GaNewPersonalController"> <padding>
    <Insets bottom="20.0"
            left="20.0"
            right="20.0"
            top="20.0"/>
</padding>

    <children>
        <Label fx:id="lblTituloFormulario" text="Nuevo Personal">
            <font>
                <Font name="System Bold"
                      size="18.0"/>
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/> </rowConstraints>

            <children>
                <Label text="DNI: *" GridPane.rowIndex="0"/>
                <TextField fx:id="txtDni" promptText="8 dígitos" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Nombres Completos: *" GridPane.rowIndex="1"/>
                <TextField fx:id="txtNombresCompletos" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Nombre de Usuario: *" GridPane.rowIndex="2"/>
                <TextField fx:id="txtNombreUsuario" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Correo: *" GridPane.rowIndex="3"/>
                <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Clave: *" GridPane.rowIndex="4"/>
                <PasswordField fx:id="pfClave" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Teléfono:" GridPane.rowIndex="5"/>
                <TextField fx:id="txtTelefono" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Dirección:" GridPane.rowIndex="6"/>
                <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Rol: *" GridPane.rowIndex="7"/>
                <ComboBox fx:id="cbxRol" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="Estado: *" GridPane.rowIndex="8"/>
                <ComboBox fx:id="cbxEstado" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

            </children>
        </GridPane>

        <Label fx:id="lblMensajePersonal" wrapText="true"/>

        <HBox alignment="BOTTOM_CENTER" spacing="10.0">
            <children>
                <Button fx:id="btnGuardarPersonal"
                        onAction="#guardarPersonal" mnemonicParsing="false"
                        prefHeight="29.0"
                        prefWidth="150.0"
                        style="-fx-font-size: 16px; -fx-background-color: #028000; -fx-text-fill: white; -fx-background-radius: 7;"
                        text="Guardar"/>
                <Button fx:id="btnCancelarPersonal"
                        onAction="#cancelarFormulario" mnemonicParsing="false"
                        prefHeight="28.0"
                        prefWidth="150.0"
                        style="-fx-font-size: 16px; -fx-background-color: #800E00; -fx-text-fill: white; -fx-background-radius: 7;"
                        text="Cancelar"/>
            </children>
        </HBox>
    </children>
</VBox>