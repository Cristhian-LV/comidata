<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="contenedorPrincipalProd"
      prefHeight="600.0"
      prefWidth="1000.0"
      style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #ffffff; -fx-background-radius: 5;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.conceptos_poo.saborsistemas.Controladores.Ga_Productos">
    <children>

        <Label text="Gestión de productos">
            <font>
                <Font name="System Bold"
                      size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0"
                        left="10.0"
                        right="10.0"/>
            </VBox.margin>
        </Label>

        <HBox alignment="CENTER_LEFT"
              spacing="7.0"
              style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-color: #ffffff; -fx-background-radius: 5;">
            <children>
                <Button fx:id="btnAgregarProductos"
                        onAction="#agregarProductos"
                        mnemonicParsing="false"
                        style="-fx-font-size: 16px; -fx-background-color: #028000; -fx-text-fill: white; -fx-background-radius: 7;"
                        text="Agregar producto"/>
                <Button fx:id="btnEliminarProductos"
                        onAction="#eliminarTodosLosProductos"
                        mnemonicParsing="false"
                        style="-fx-font-size: 16px; -fx-background-color: #800E00; -fx-text-fill: white; -fx-background-radius: 7;"
                        text="Eliminar todo"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Buscar:">
                    <font>
                        <Font name="System Bold"
                              size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtFiltroProductos"
                           prefWidth="230.0"
                           promptText="Buscar por nombre, categoría..."/>
            </children>
            <padding>
                <Insets bottom="10.0"
                        left="10.0"
                        right="10.0"
                        top="10.0"/>
            </padding>
        </HBox>

        <TableView fx:id="tableViewProductos"
                   VBox.vgrow="ALWAYS">
        </TableView>

    </children>

    <padding>
        <Insets bottom="10.0"
                left="10.0"
                right="10.0"
                top="10.0"/>
    </padding>
</VBox>